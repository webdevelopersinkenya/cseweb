<h1><%= title %></h1>
<p><%= message %></p>

<form action="/inv/add-inventory" method="post">
  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" value="<%= data.inv_make || '' %>" required>

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" value="<%= data.inv_model || '' %>" required>

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" value="<%= data.inv_year || '' %>" required>

  <label for="classificationList">Classification</label>
  <%= classificationList %>

  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" value="<%= data.inv_price || '' %>" required>

  <button type="submit">Add Inventory Item</button>
</form>
