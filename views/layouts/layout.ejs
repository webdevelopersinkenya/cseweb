<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body class="<%= (typeof title !== 'undefined' && (title === 'Login' || title === 'Register')) ? 'auth-page' : '' %>">
  <div id="wrapper">

    <% 
      // Determine if this is an auth page
      const isAuthPage = (typeof title !== 'undefined') && (title === 'Login' || title === 'Register'); 
    %>

    <!-- Only show header and navigation if not login or register page -->
    <% if (!isAuthPage) { %>
      <%- include('../partials/header') %>
      <%- include('../partials/navigation') %>
    <% } %>

    <main>
      <%- body %>
    </main>

    <!-- Only show footer if not login or register page -->
    <% if (!isAuthPage) { %>
      <%- include('../partials/footer') %>
    <% } %>

  </div>
</body>
</html>
